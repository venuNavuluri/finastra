<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
        <fullName>Request_Bypass_Approval_Requires_Reason</fullName>
        <active>true</active>
        <errorConditionFormula>AND(Request_Bypass_Approval__c  = TRUE, ISBLANK(Request_Bypass_Approval_Reason__c ))</errorConditionFormula>
        <errorDisplayField>Request_Bypass_Approval_Reason__c</errorDisplayField>
        <errorMessage>A request for bypassing approval will require a request reason.</errorMessage>
    </ValidationRule>
