<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cannot_Blank_Out_FirstName</fullName>
    <active>true</active>
    <description>RUBX-1416:Rule For FirstName Mandatory Check</description>
