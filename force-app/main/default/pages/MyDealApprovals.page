<apex:page tabStyle="Deal_Approval__c" controller="MyDealApprovals" showHeader="false" sidebar="false">
<!-- Kim Jansen(05/01/2009) - The page displays any Pending deals for the logged in user. This page is used as a Home page component. 
     The details of the requirement can be obtained at https://emea.salesforce.com/01520000000iu6K -->
    <apex:form >
    
        <apex:pageBlock title="My Deal Approvals">
            <apex:pageBlockSection columns="1">
            
                    <apex:pageBlockTable value="{!lstDA}" var="item"  >
                         
                        <apex:column headerValue="Action" width="15%">
                            <apex:commandLink value="Reassign" action="{!reassign}" target="_parent">
                                 <apex:param name="daId" value="{!item.id}" />
                            </apex:commandLink>
                            &nbsp;|&nbsp;
                            <apex:commandLink value="Approve / Reject" action="{!approveReject}" target="_parent">
                                 <apex:param name="daId" value="{!item.id}" />
                            </apex:commandLink>
                        </apex:column>
                        <apex:column headerValue="Opp Number" width="8%">
                              <apex:outputText >{!item.Opportunity__r.Order_Number__c}</apex:outputText>
                        </apex:column>
                        
                        <apex:column headerValue="Opp Name" width="20%">
                            <a href="/{!item.Opportunity__c}" target="_parent">{!item.Opportunity__r.Name}</a>
                        </apex:column>
                        
                        <apex:column headerValue="Opp Close Date" width="10%">
                            <apex:outputField Value="{!item.Opportunity__r.CloseDate}"/> 
                        </apex:column>
                                                                        
                        <apex:column headerValue="Days Outstanding" width="10%">
                            <apex:outputText >{!item.Date_Diff__c}</apex:outputText>
                        </apex:column>
                    
                    </apex:pageBlockTable>  
                    
            </apex:pageBlockSection>
        </apex:pageBlock>   
   
    </apex:form>

</apex:page>