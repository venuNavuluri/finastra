<apex:page showHeader="false" sidebar="false" controller="community_ChatterFeedController">
<link rel="stylesheet" type="text/css" href="//cloud.typography.com/7786472/695626/css/fonts.css" />

<style>

body {    font-family: "Gotham SSm 4r","Gotham SSm A","Gotham SSm B",Arial,Verdana,Helvetica,sans-serif !important;
    font-weight: 400 !important;
    font-style: normal !important;
    font-size:1em;
}
.comment{background-color:#e6e6e6;padding:1em;font-size:.9em}
.comment img{display:inline-block;width:20%;max-width:100px;vertical-align:top}
.comment .comment__content{display:inline-block;width:70%;margin-left:0}
.comment .comment__content .date{color:#999;font-size:.85em}
.comment .comment__content .commentType{font-size:.85em; padding-top: 10px}
.comment {background-color: #fff; padding:20px 0; margin:0; border-bottom:1px dotted #e6e6e6;}
.comment .comment__content .chatter {padding-top: 10px;background-color:#f3f3f3; margin-left: 25px; padding-left: 10px; padding-bottom: 5px; display: block; margin-top: 10px}
.comment .name {color: #2ab5b2;}
.comment a {
    font-size:12px;
    color: #353535;
    text-decoration: none;
    border-bottom: 1px dotted #353535;
}
.comment a:hover {color:#f18881; border-bottom: 1px dotted #f18881; text-decoration: none;}


body .bPageTitle {display:none}

@media (min-width: 1024px){.comment{margin-right:1.2em}}

</style>
    <apex:sectionHeader title="Chatter Feed" />
     
    <apex:repeat value="{!lstFeeds}" var="cList">
        <div class="comment">
              <!-- <apex:image id="profileImage" url="{!cList.FullPhotoUrl}"/> -->
             <div class="comment__content">
                    <div class="name">
                        <apex:outputField value="{!cList.feedUser.FirstName}"/>&nbsp;<apex:outputField value="{!cList.feedUser.LastName}"/>
                    </div>
                    <div class="text">
                        <p><apex:outputText value="{!cList.userFeedItem.Body}"/></p>
                        <p><apex:outputLink value="/{!cList.userFeedItem.Id}" target="_parent">{!cList.feedArticle.title}</apex:outputLink></p>
                    </div>
                    <div class="date">
                        <apex:outputText value="{0,date,dd/MM/yyyy ':' HH:mm }">
                            <apex:param value="{!cList.userFeedItem.CreatedDate}"/>
                        </apex:outputText>
                    </div>
                    <div class="commentType">
                        <apex:outputText value="{!cList.userFeedItem.Type}" />
                    </div>
                    <apex:repeat var="comments" value="{!cList.feedComments}">
                    <div class="chatter">
                        <apex:outputText value="{!comments.commentbody}" /><br/>
                        <apex:outputText value="{!comments.userName.firstname}" />&nbsp;<apex:outputField value="{!comments.userName.LastName}"/><br/>
                        <div class="date">
                            <apex:outputText value="{0,date,dd/MM/yyyy ':' HH:mm }">
                                <apex:param value="{!comments.CreatedDate}"/>
                            </apex:outputText>
                        </div>
                    </div>
                    </apex:repeat>
             </div>
        </div>
</apex:repeat>
</apex:page>