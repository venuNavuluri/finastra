<apex:page id="portalUserProfilePage" controller="community_PreferenceController" showHeader="false" sidebar="false" >

<link rel="stylesheet" type="text/css" href="//cloud.typography.com/7786472/695626/css/fonts.css" />

<style>

body, h1, h2, h3, h4, h5, h6, table, table th, table td  {    
    font-family: "Gotham SSm 4r","Gotham SSm A","Gotham SSm B",Arial,Verdana,Helvetica,sans-serif !important;
    font-weight: 400 !important;
    font-style: normal !important;
    font-size:12px;
}

.bPageBlock {border:0;}

body .secondaryPalette.bPageBlock, body .bPageBlock {
    background-color: #fff;
    border:0;
    border-radius: 0;
}

.bPageBlock .pbHeader > table > tbody > tr > td,
.apexp .bPageBlock.apexDefaultPageBlock .pbBody { margin-left:0; padding-left:0}

.apexp .bPageBlock.apexDefaultPageBlock .pbHeader > table {border:0;}
.pbSubheader { background-color:#3C3C3B}
body .bPageBlock .pbBody .labelCol, body .print .topics-label {color:#694ed6 !important; font-family: "Gotham SSm 4r","Gotham SSm A","Gotham SSm B",Arial,Verdana,Helvetica,sans-serif !important;}
.pbBody a {color: #694ed6; text-decoration: none; border-bottom: 1px dotted #694ed6;}
.pbBody a:hover {color:#f18881; border-bottom: 1px dotted #f18881; text-decoration: none;}
body .bPageBlock .pbBody .labelCol {color:#694ed6; font-size:12px;}

.userProfilePage form input {
    border:1px solid red!important;
    background-color:red;
    }
    
.userProfilePage form input.btn {
    background-image:none!important;
    }


</style>
    <apex:define name="body">
        <apex:form id="theForm">
          <apex:outputPanel style="padding:50px 50px 50px 50px" id="userDetail" rendered="{!showUserForm}">
           <apex:pageBlock title="{!$Label.site.my_profile}" id="editUserDetail" rendered="{!isEdit}">
             <apex:pageMessages />
             <apex:pageBlockButtons id="editButtons" location="top">
               <apex:commandButton id="save" value="{!$Label.site.save}" action="{!save}" rerender="userDetail" styleClass="btn goBtn"/>
               <apex:commandButton id="cancel" value="{!$Label.site.cancel}" action="{!cancel}" rerender="userDetail" immediate="true"/>
             </apex:pageBlockButtons>
             <apex:pageBlockSection id="editUserSection" columns="1" title="{!$Label.site.user_information}">
                 <apex:outputField id="detailusername" value="{!user.username}"/>
                 <apex:inputField id="edittimezone" value="{!user.timezonesidkey}"/> 
                 <apex:inputField id="editlocale" value="{!user.localesidkey}"/> 
                 <apex:inputField id="editlanguage" value="{!user.languagelocalekey}"/> 
                 <apex:inputField id="editcommunityNickname" value="{!user.communityNickname}"/> 
             </apex:pageBlockSection>
             <apex:pageBlockSection id="editContactSection" columns="2" title="{!$Label.site.contact_information}">
                <apex:inputField id="editemail" value="{!user.email}"/>
                <apex:inputField id="editSalutation" value="{!contact.salutation}" />
                 <apex:inputField id="editfirstName" value="{!user.firstName}"/>                  
                 <apex:inputField id="editlastName" value="{!user.lastName}"/> 
                 <apex:inputField id="editphone" value="{!user.phone}"/> 
                 <apex:inputField id="edittitle" value="{!user.title}"/> 
                 <apex:inputField id="editextension" value="{!user.extension}"/> 
                 <apex:pageBlockSectionItem />
                 <apex:inputField id="editfax" value="{!user.fax}"/>
                 <apex:pageBlockSectionItem />
                 <apex:inputField id="editmobile" value="{!user.mobilephone}"/> 
               </apex:pageBlockSection>
               <apex:pageBlockSection id="editAddressInformation" columns="1" title="{!$Label.site.address_information}">
                 <apex:inputField id="editstreet" value="{!user.street}"/> 
                 <apex:inputField id="editcity" value="{!user.city}"/> 
                 <apex:inputField id="editstate" value="{!user.state}"/> 
                 <apex:inputField id="editpostalcode" value="{!user.postalcode}"/> 
                 <apex:inputField id="editcountry" value="{!user.country}"/> 
               </apex:pageBlockSection>
               <apex:pageBlockSection title="Account Details" columns="1" id="editAccountSection">
                    <apex:outputField value="{!contact.account.name}" />
                    <apex:inputField value="{!contact.reportstoId}" id="editReportsTo"/>
                    <apex:inputField value="{!contact.Product__c}" id="editProducts" />
               </apex:pageBlockSection>
               <apex:pageBlockSection id="editPreferenceSection" columns="2" title="Preferences">
                    <apex:inputCheckbox id="editSupportHandbook" value="{!contact.Receive_Support_Handbook__c}"  />
                    <apex:inputCheckbox id="editSupportNewsletter" value="{!contact.Receive_Customer_Support_Newsletter__c}"  />
                    <apex:inputCheckbox id="editSupportMaintenance" value="{!contact.Receive_Support_Maintenance_Updates__c}"  />
                    <apex:inputCheckbox id="editSupportPolicyUpdates" value="{!contact.Receive_Customer_Support_Policy_Updates__c}"  />
                    <apex:inputCheckbox id="editSupportProductUpdates" value="{!contact.Receive_Misys_Product_Updates__c}" />                  
                  </apex:pageBlockSection>
           </apex:pageBlock>         
        
            <apex:pageBlock title="{!$Label.site.my_profile}" id="viewUserDetail" rendered="{!!isEdit}">
                 <apex:pageBlockButtons id="detailButtons" location="top">
                   <apex:commandButton id="edit" value="{!$Label.site.edit}" action="{!edit}" rerender="userDetail"  styleClass="btn goBtn"/>
                   
                 </apex:pageBlockButtons>
                 <apex:pageBlockSection id="viewUserSection" columns="2" title="{!$Label.site.user_information}">
                     <apex:outputField id="detailusername" value="{!user.username}"/>
                     <apex:outputField id="detailtimezone" value="{!user.timezonesidkey}"/> 
                     <apex:outputField id="detaillocale" value="{!user.localesidkey}"/> 
                     <apex:outputField id="detaillanguage" value="{!user.languagelocalekey}"/> 
                     <apex:outputField id="detailcommunityNickname" value="{!user.communityNickname}"/> 
                 </apex:pageBlockSection>
                 <apex:pageBlockSection id="viewContactSection" columns="2" title="{!$Label.site.contact_information}">
                     <apex:outputField id="detailemail" value="{!user.email}"/> 
                     <apex:outputField id="detailSaluitation" value="{!contact.salutation}" />
                     <apex:outputField id="detailfirstName" value="{!user.firstName}"/> 
                     <apex:outputField id="detaillastName" value="{!user.lastName}"/> 
                     <apex:outputField id="detailtitle" value="{!user.title}"/> 
                     <apex:outputField id="detailphone" value="{!user.phone}"/> 
                     <apex:outputField id="detailstreet" value="{!user.street}"/> 
                     <apex:outputField id="detailcity" value="{!user.city}"/> 
                     <apex:outputField id="detailstate" value="{!user.state}"/> 
                     <apex:outputField id="detailpostalcode" value="{!user.postalcode}"/> 
                     <apex:outputField id="detailcountry" value="{!user.country}"/> 
                     <apex:outputField id="detailextension" value="{!user.extension}"/> 
                     <apex:outputField id="detailfax" value="{!user.fax}"/> 
                     <apex:outputField id="detailmobile" value="{!user.mobilephone}"/> 
                  </apex:pageBlockSection>
                  <apex:pageBlockSection id="viewAccountDetails" columns="2" title="Account Details">
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel value="Account Name" />
                        <apex:outputText value="{!contact.Account.Name}" />
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem >
                         <apex:outputLabel value="Reports To" />
                    <apex:outputText value="{!ReportsTo}" title="Reports To" />
                    </apex:pageBlockSectionItem>
                    <apex:inputCheckbox value="{!contact.Business_Continuity_Contact__c}" disabled="true" />
                    <apex:outputField value="{!contact.Product__c}" />
                  </apex:pageBlockSection>
                  <apex:pageBlockSection id="viewPreferenceSection" columns="2" title="Preferences">
                    <apex:inputCheckbox id="detailSupportHandbook" value="{!contact.Receive_Support_Handbook__c}" disabled="true" />
                    <apex:inputCheckbox id="detailSupportNewsletter" value="{!contact.Receive_Customer_Support_Newsletter__c}" disabled="true" />
                    <apex:inputCheckbox id="detailSupportMaintenance" value="{!contact.Receive_Support_Maintenance_Updates__c}" disabled="true" />
                    <apex:inputCheckbox id="detailSupportPolicyUpdates" value="{!contact.Receive_Customer_Support_Policy_Updates__c}" disabled="true" />
                    <apex:inputCheckbox id="detailSupportProductUpdates" value="{!contact.Receive_Misys_Product_Updates__c}" disabled="true" />
                  </apex:pageBlockSection>
               </apex:pageBlock>
            </apex:outputPanel>
            <apex:outputPanel id="adminPanel" rendered="{!!showUserForm}">
               <p> <apex:outputText value="{!ErrorMessage}"></apex:outputText> </p>
            </apex:outputPanel>
         </apex:form>
    </apex:define>

</apex:page>